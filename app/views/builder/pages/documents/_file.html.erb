<article class="image" data-src="<%= file.document.url %>"
  data-idx="<%= file.idx %>">
  <%= image_tag file.thumbnail %>
  <header class="<%= 'select' if params[:select] %>">
    <%= link_to(
      '',
      builder_route([file], :show),
      :class => 'delete',
      :method => :delete,
      :data => { :confirm => 'Are you sure?' }
    ) unless params[:select] %>
  </header>
</article>
