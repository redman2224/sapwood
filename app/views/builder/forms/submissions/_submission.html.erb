<article class="form-submission">
  <%= content_tag(:span, '', :class => 'status') %>
  <div class="data">
    <div class="top">
      <%= content_tag(:h4, submission.title, :class => 'title') %>
    </div>
    <div class="bottom">
      <%= content_tag(
        :span,
        "Last edited #{content_tag(
          :span, submission.updated_at.strftime("%h %d")
        )}".html_safe,
        :class => 'last-edited'
      ) %>
    </div>
  </div>
  <div class="actions">
    <div class="top">
      <%= link_to(
        'View',
        builder_route([current_form, submission], :show),
        :class => 'view'
      ) %>
      <%= link_to(
        'Edit',
        builder_route([current_form, submission], :edit),
        :class => 'edit'
      ) %>
    </div>
    <div class="bottom"></div>
  </div>
</article>
