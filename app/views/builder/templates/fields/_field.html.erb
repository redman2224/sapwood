<article class="form-field">
  <%= content_tag(:span, '', :class => 'status') %>
  <div class="data">
    <div class="top">
      <%= content_tag(:h4, field.title, :class => 'title') %>
    </div>
    <div class="bottom"></div>
  </div>
  <div class="actions">
    <div class="top">
      <%= link_to(
        'Edit',
        builder_route([current_template, field], :edit),
        :class => 'edit'
      ) %>
    </div>
    <div class="bottom"></div>
  </div>
</article>
