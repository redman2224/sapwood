<article class="resource-type">
  <%= content_tag(:span, '', :class => 'status') %>
  <div class="data">
    <div class="top">
      <%= content_tag(:h4, resource_type.title, :class => 'title') %>
      <%= content_tag(:span, resource_type.slug, :class => 'filename') %>
    </div>
    <div class="bottom">
      <%= resource_type_last_edited(resource_type) %>
    </div>
  </div>
  <div class="actions">
    <div class="top">
      <%= link_to(
        'Resource Fields',
        builder_site_resource_type_resource_fields_path(
          current_site, resource_type
        ),
        :class => 'form'
      ) %>
      <%= link_to(
        'Association Fields',
        builder_site_resource_type_resource_association_fields_path(
          current_site, resource_type
        ),
        :class => 'form'
      ) %>
    </div>
    <div class="bottom">
      <%= link_to(
        "View #{resource_type.title.pluralize}",
        builder_site_resource_type_resources_path(
          current_site, resource_type
        ),
        :class => 'pages'
      ) %>
      <%= link_to(
        'Settings',
        builder_route([resource_type], :edit),
        :class => 'edit'
      ) %>
      <%= link_to(
        'Delete',
        builder_route([resource_type], :show),
        :class => 'delete',
        :method => :delete,
        :data => { :confirm => 'Are you sure?' }
      ) %>
    </div>
  </div>
</article>
