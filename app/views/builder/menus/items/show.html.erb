<%= builder_page_title(
  menus_breadcrumbs,
  :class => 'breadcrumbs no-border'
) do %>
  <%= content_tag(
    :div,
    link_to(
      "New Item (under #{current_menu_item.title})",
      new_builder_site_menu_menu_item_path(
        current_site, current_menu, :parent => current_menu_item.slug
      ),
      :class => 'new'
    ),
    :class => 'new-buttons dropdown'
  ) %>
  <%= render :partial => 'builder/menus/tabs' %>
<% end %>

<section id="page-content" class="data-container">
  <% if @menu_items.size > 0 %>
    <%= data_table(@menu_items, 'item') %>
  <% else %>
    <%= missing_content("No items for this menu. Maybe you should add one!") %>
  <% end %>
</section>
